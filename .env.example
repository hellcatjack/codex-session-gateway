# Base settings (shared)
CODEX_CLI_CMD=codex
CODEX_CLI_ARGS=
CODEX_CLI_INPUT_MODE=stdin
CODEX_CLI_APPROVALS_MODE=3
CODEX_CLI_SKIP_GIT_CHECK=1
