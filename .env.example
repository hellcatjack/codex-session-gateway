CODEX_JSONL_REASONING_THROTTLE_SECONDS=10
CODEX_JSONL_REASONING_MODE=summary
FINAL_RESULT_IDLE_TIMEOUT_SECONDS=10800
JSONL_SYNC_INTERVAL_SECONDS=3
XDG_RUNTIME_DIR=/run/user/1000
DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus
DB_PATH=data/app.db
LOCK_PATH=data/app.lock
STREAM_FLUSH_INTERVAL=1.5
STREAM_INCLUDE_STDERR=0
PROGRESS_TICK_INTERVAL=0
RUN_TIMEOUT_SECONDS=10800
CONTEXT_COMPACTION_IDLE_TIMEOUT_SECONDS=10800
NO_OUTPUT_IDLE_TIMEOUT_SECONDS=10800
MESSAGE_CHUNK_LIMIT=3500
